---
import logoLight from '@/assets/tim_s_experiments_logo.svg';
import logoDark from '@/assets/tim_s_experiments_logo_dark.svg';
import ButtonLink from '@/components/ButtonLink.astro';
import { Button } from '@/components/ui/button';
import { Image } from 'astro:assets';
import { Moon, Sun } from 'lucide-react';
---

<nav class="flex items-center justify-between">
  <a href="/" class="h-8 no-underline">
    <Image
      format="svg"
      class="block dark:hidden"
      src={logoLight}
      alt="Tim's Experiments"
      height="32"
    />
    <Image
      format="webp"
      class="hidden dark:block"
      src={logoDark}
      alt="Tim's Experiments"
      height="32"
    />
    <span class="sr-only">Home</span>
  </a>
  <div class="flex items-center justify-between gap-2">
    <ButtonLink variant="outline" href="/lab">The Lab</ButtonLink>
    <Button
      id="color-swap-btn"
      className="h-10 w-10 rounded-full p-2 text-rhino-950 dark:text-rhino-50"
      variant="ghost">
      <Moon className="block h-5 w-5 dark:hidden" />
      <span class="sr-only block dark:hidden">Dark mode</span>
      <Sun className="hidden h-5 w-5 dark:block" />
      <span class="hidden dark:sr-only dark:block">Light mode</span>
    </Button>
  </div>
</nav>

<script src="../scripts/color_preference.ts"></script>
