---
import { Button } from '@/components/ui/button';
import { Home } from 'lucide-react';
---

<nav
  class="mx-2 flex w-full max-w-lg flex-nowrap items-center gap-2 overflow-auto whitespace-nowrap rounded-full bg-rhino-300/90 px-4 py-2 text-rhino-950 dark:bg-rhino-800/90 dark:text-rhino-50">
  <Button
    variant="ghost"
    className="transition-all ease-linear"
    className="active"
    data-nav-id="hero">
    <Home className="h-5 w-5" /><span class="sr-only">Home</span>
  </Button>
  <div class="h-full w-0 border-l border-l-rhino-950 dark:border-l-rhino-50">
    &nbsp;
  </div>
  <Button
    variant="ghost"
    className="transition-all ease-linear"
    data-nav-id="my-journey">
    My Journey
  </Button>
  <Button
    variant="ghost"
    className="transition-all ease-linear"
    data-nav-id="the-lab">
    The Lab
  </Button>
  <Button
    variant="ghost"
    className="transition-all ease-linear"
    data-nav-id="contact">
    Contact
  </Button>
  <Button
    variant="ghost"
    className="transition-all ease-linear"
    data-nav-id="join">
    Join
  </Button>
</nav>

<style>
  .active {
    @apply text-primary-500 hover:text-primary-600 dark:text-primary-400 dark:hover:text-primary-300;
  }
</style>

<script src="./nav.ts"></script>
