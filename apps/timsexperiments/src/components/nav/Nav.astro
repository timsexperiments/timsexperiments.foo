---
import { Button } from '@/components/ui/button';
import { Home, Compass, FlaskConical, Mail, UserRoundPlus } from 'lucide-react';
---

<nav
  class="z-10 mx-2 flex w-fit max-w-lg flex-nowrap items-center gap-2 overflow-auto whitespace-nowrap rounded-full bg-rhino-300/90 px-4 py-2 text-rhino-950 dark:bg-rhino-800/90 dark:text-rhino-50 sm:w-fit">
  <Button
    variant="ghost"
    className="transition-all ease-linear"
    className="active"
    data-nav-id="hero">
    <Home className="h-5 w-5" /><span class="sr-only">Home</span>
  </Button>
  <div class="h-full w-0 border-l border-l-rhino-800 dark:border-l-rhino-100">
    &nbsp;
  </div>
  <Button
    variant="ghost"
    className="transition-all ease-linear"
    data-nav-id="my-journey">
    <span class="sr-only md:not-sr-only">My Journey</span>
    <Compass className="h-5 w-5 md:hidden" />
  </Button>
  <Button
    variant="ghost"
    className="transition-all ease-linear"
    data-nav-id="the-lab">
    <span class="sr-only md:not-sr-only">The Lab</span>
    <FlaskConical className="h-5 w-5 md:hidden" />
  </Button>
  <Button
    variant="ghost"
    className="transition-all ease-linear"
    data-nav-id="contact">
    <span class="sr-only md:not-sr-only">Contact</span>
    <Mail className="h-5 w-5 md:hidden" />
  </Button>
  <Button
    variant="ghost"
    className="transition-all ease-linear"
    data-nav-id="join">
    <span class="sr-only md:not-sr-only">Join</span>
    <UserRoundPlus className="h-5 w-5 md:hidden" />
  </Button>
</nav>

<style>
  .active {
    @apply text-primary-500 hover:text-primary-600 dark:text-primary-400 dark:hover:text-primary-300;
  }
</style>

<script src="@/scripts/nav.ts"></script>
