---
import ButtonLink from '@/components/ButtonLink.astro';
import PointerControl from '@/components/home/hero/PointerControl.astro';
import RubiksCubeControl from '@/components/home/hero/RubiksCubeControl.astro';
import { Skeleton } from '@/components/ui/skeleton';
import { Brain, Hammer, Microscope } from 'lucide-react';
---

<div
  class="flex w-screen flex-col-reverse items-center gap-10 px-4 sm:px-4 md:inline-flex md:flex-row md:justify-between md:px-8 md:pb-28 md:pt-16 lg:px-12 xl:px-16">
  <div class="w-full max-w-lg space-y-4 xl:max-w-xl">
    <div class="space-y-2">
      <h2 class="text-xl font-medium">Discover | Imagine | Build</h2>
      <h1
        class="font-display text-4xl font-bold sm:text-5xl md:text-6xl xl:text-7xl">
        Tim's Experiments
      </h1>
    </div>
    <p
      class="w-full whitespace-normal text-sm text-rhino-700 dark:text-rhino-300 sm:text-base md:text-lg">
      Get ready to discover a digital playground where software's boundaries are
      pushed, explored, and redefined. Dive into professional insights, in-depth
      topics, practical code snippets, <br class="hidden xl:block" />toy
      projects, and fresh takes on emerging tech.
    </p>
    <ButtonLink href="/lab" variant="default">Explore The Lab</ButtonLink>
    <div class="flex items-center text-rhino-700 dark:text-rhino-200">
      <div class="flex items-center justify-center px-8 py-6">
        <Microscope className=" h-10 w-10 md:h-16 md:w-16" />
      </div>
      <div
        class="mx-2 h-12 w-0 border-l-2 border-rhino-700 dark:border-rhino-400 md:mx-4 md:h-20">
        &nbsp;
      </div>
      <div class="flex items-center justify-center px-8 py-6">
        <Brain className="h-10 w-10 md:h-16 md:w-16" />
      </div>
      <div
        class="mx-2 h-12 w-0 border-l-2 border-rhino-700 dark:border-rhino-400 md:mx-4 md:h-20">
        &nbsp;
      </div>
      <div class="flex items-center justify-center px-8 py-6">
        <Hammer className="h-10 w-10 md:h-16 md:w-16" />
      </div>
    </div>
  </div>
</div>
<div class="relative hidden h-full w-full lg:block">
  <div
    id="cube-placeholder"
    class="absolute left-0 top-0 flex h-full w-full items-center justify-center">
    <div class="grid aspect-square w-3/5 grid-cols-3 grid-rows-3 gap-4">
      <Skeleton className="h-full w-full" />
      <Skeleton className="h-full w-full" />
      <Skeleton className="h-full w-full" />
      <Skeleton className="h-full w-full" />
      <Skeleton className="h-full w-full" />
      <Skeleton className="h-full w-full" />
      <Skeleton className="h-full w-full" />
      <Skeleton className="h-full w-full" />
      <Skeleton className="h-full w-full" />
    </div>
  </div>
  <div class="absolute left-0 right-0 top-0 flex h-full items-center">
    <RubiksCubeControl />
  </div>
  <div class="flex h-full w-full items-center justify-center">
    <PointerControl />
  </div>
  <canvas
    id="cube"
    class="absolute left-0 top-0 -z-10 h-full w-full -translate-x-[20%]"
  ></canvas>
</div>

<script src="@/scripts/cube/main.ts"></script>
