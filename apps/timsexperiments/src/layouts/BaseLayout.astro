---
import BaseHead from '../components/BaseHead.astro';
import ScrollTracker from '../components/ScrollTracker.astro';

type Props = {
  title?: string;
  description?: string;
};

export const { title, description } = Astro?.props ?? {};
---

<!doctype html>
<html class="dark" lang="en">
  <head>
    <BaseHead title={title ?? ''} description={description ?? ''} />
  </head>

  <body
    class="h-dvh w-screen bg-rhino-50 text-rhino-950 dark:bg-rhino-950 dark:text-rhino-50">
    <slot />
    <ScrollTracker />
  </body>
</html>
